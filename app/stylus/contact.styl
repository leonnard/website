@import 'variables'

section.contact
  background:$white
  color:$black    
  
  form
    width: 100% 
    max-width:500px
    
  input, textarea
    line-height: normal
    width: 100%
    margin: .2em 0 .7em 0
    border-radius: 0
    background: $white
    padding: .6em .4em
    resize: none
    outline: none
    font-weight: 300
    border: 1px solid $inputBorder
    overflow: hidden
    box-shadow: 0 0 0 rgba(221, 221, 221, 0)
    -webkit-transition: all .3s
    -moz-transition: all .3
    transition: all .3s
    box-sizing: border-box
    -webkit-appearance: none

    &:focus
      box-shadow: 0 0 4px rgba(221, 221, 221, 1)
      border: 1px solid rgba(200, 200, 200, 1)
      
  textarea
    margin: .2em 0 .1em 0
    -webkit-transition: height .2s
    -moz-transition: height .2s
    transition: height .2s
    height: 2.5em
    
  .active textarea
    height: 10em
  
  .btn 
    width:100%
    margin-top:1em
    
    i 
      margin-right:.5em

  .msg-success, .msg-error
      display: none
      line-height: 2em
      
  .msg-success
    color: #4CAF50
    
  .msg-error
    color: #D50000
      
  .fa-spinner
    display: none
    
  button.is-loading
    .fa-spinner
      display: inline
      
  ul.contact-details
    list-style: none
    padding: 0
    margin: 1em 0
    
    li 
      margin-bottom:.1em

    i
      margin-right: .5em  