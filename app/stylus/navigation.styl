@import 'variables'

nav
  width: 100%
  position: absolute
  top: 0
  left: 0
  padding: 0 .5em
  height: 50px
  z-index: 200
  color: white
  user-select: none
  
  .nav-content
    margin:0 auto
    padding: 0
    border-bottom:1px solid #eee
    
  .logo
    font-family: $sans
    font-weight: 900
    text-transform: uppercase
    font-size: 1.5em
    line-height: 50px
    float: left
    color: white
    cursor: pointer
    
    img
      width: 30px
      line-height: 50px
      display: block
      float: left
      margin-top: 9px
      margin-right: 7px
      
  ul
    list-style: none
    padding: 0
    line-height: 50px
    font-family: $sans
    margin: 0
    float: right
    box-sizing: border-box

    li
      cursor: pointer
      margin-left:1em
      float: left
      line-height: 50px
      cursor: pointer
      box-sizing: border-box
      transition: border-bottom-color .4s, color .4s
      margin-bottom: 0
      
      &.active
        color: $white
        background: $red
        
       &:hover
        color: $highlight
        
    a
    a:visited
      float:left
      text-decoration: none
      color: white
      
      &:hover
        color: $highlight

  ul.lang
    float: right
    
    li.selected
      color: $red