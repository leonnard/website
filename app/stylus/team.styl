@import 'variables'

section.team
  .section-headline
    color:$white

.member
  margin-bottom:4em
  
  .member-image
    float:left
    width:150px
    max-width:50%
    margin-right:1em
    
  .member-name
    font-weight:bold
    font-size:22px  
  
  .member-jobtitle
    margin:.25em 0 1em 0

  .member-quote
    max-width:800px
        
@media screen and (min-width: 640px)
  .member
    .member-image
      margin-right:3em

    .member-name
      font-size:28px
      margin-top:1em