@import 'variables'

section.projects           
  background $extralight
  color:$black

  .project-inner-wrapper  
    display:block
    border: 1px solid $lightgrey
    background:white
    text-decoration:none
    box-shadow: 0 1px 2px rgba(50, 50, 50, .08)
    margin-bottom:2em
  
    &:hover
      box-shadow: 0 2px 4px rgba(50, 50, 50, .15)

    .project-image
      height: 175px
      background-size: cover
      background-position: center
      background-repeat: no-repeat
      border-bottom:1px solid $lightgrey
      
    .project-info
      padding:1em  
      
      .project-headline
        font-size: 1.1em
        font-weight: bold
        margin:0 0 .8em 0

      .project-text
        font-size: .8em
        line-height: 1.4

@media screen and (min-width: 640px)
  section.projects
    .project
      float: left
      
      .project-info
        height:125px
