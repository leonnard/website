@import 'font-awesome.css'
@import 'normalize'
@import 'helper'
@import 'variables'
@import 'navigation'
@import 'intro'
@import 'projects'
@import 'clients'
@import 'team'
@import 'contact'
@import 'footer'

html
button
input
select
textarea 
  color: $black

body,html
  width: 100%
  font-family: $sans
  -webkit-font-smoothing: antialiased

a
a:visited
  color: $black
  text-decoration: underline

a:hover
  color: lighten($black,10%)
  
body
  background:$black
  color: white
  font-size: 1em
  line-height: 1.4

.highlight
  color: $highlight

section
  width: 100%
  position: relative
  padding: 4em 1em 8em 1em
  
  .container
    max-width:70em
    margin:0 auto
    
  .section-headline
    text-transform: uppercase
    font-weight: bold
    letter-spacing: 0px
    font-size:1.8em
    margin:1em 0 1.5em 0
    color: $black

.btn
  background: $white
  border: 1px solid $grey
  border-radius: 2px
  color: $black
  font-size: .9em
  padding: .4em 1em
  text-transform: uppercase
  text-align: center
  transition: background .3s, color .3s, border-color .3s
  text-decoration: none
  display:block
  
  &:hover
    background: $black
    color: $white
    border-color: $black
    
  &:focus
    outline: none
    
  i
    margin-right: .3em
    font-size: 1em
        
@import 'media-queries'