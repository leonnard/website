/* Media Queries
–––––––––––––––––––––––––––––––––––––––––––––––––– */
/*
Note: The best way to structure the use of media queries is to create the queries
near the relevant code. For example, if you wanted to change the styles for buttons
on small devices, paste the mobile query code up in the buttons section and style it
there.
*/

@media (min-width: 360px)
  nav
    ul
      display:block

/* Larger than mobile */
@media (min-width: 27em)
  section.clients
    .client    
      img
        width: 90%
        
    .client.first
      text-align: left

    .client.last
      text-align: right
  
/* Larger than phablet (also point when grid becomes active) */
@media (min-width: 35em)
  section.intro
    padding:4em 0
    
  section.contact
    .btn 
      width: auto
  
  section.clients
    .client    
      img
        width: 85%
      
/* Larger than tablet */
@media (min-width: 64em)
  section.intro
    padding:7em 0
    
    .intro-headline
      font-size:2.7em
      line-height:1.1
      
    .intro-text
      font-size:1.2em
      line-height:1.3
      margin-top:2em

  section.clients
    .client    
      img
        width: 60%