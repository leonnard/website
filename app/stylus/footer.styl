@import 'variables'

footer
  background: $black
  color: $white
  padding: .5em
  font-weight: 300
  
  a, a:visited
    color: $white
    text-decoration: none
    
    &:hover
      color: darken($white, 20)
      
  ul
    list-style: none
    margin: 0
    padding: 0
    
    li
      display: inline
      margin-left: .7em
      font-size: .8em
      
  ul.adress, ul.social
    float: left
    
  ul.contact
    float: right